<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	controllerName="zss18_t2_app.technician_main" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:t="sap.ui.table">

	<Page title="Technician View">
		<content>
			<IconTabBar id="centralTabBar" expanded="{device>/isNoPhone}"
				class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter text="Search Service Tickets">
						<l:Grid defaultSpan="L6 M6 S6" width="auto" id="gridIdFilter">
							<l:content>
								<f:SimpleForm id="FilterForm" minWidth="1024"
									maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
									labelSpanL="3" labelSpanM="3" emptySpanL="2" emptySpanM="2"
									columnsL="1" columnsM="1" class="editableForm">
									<f:content>
										<SearchField search="onSearch"
											placeholder="Reporter Name, Priority, Status" />
										<Button text="Advanced Search" type="Accept" press="onAdvancedFilter"
											id="filterAdvanced" />
									</f:content>
								</f:SimpleForm>
							</l:content>
						</l:Grid>
					</IconTabFilter>
				</items>
			</IconTabBar>

			<Table id="service_tickets_technician_id" items="{/TicketSet}"
				growing="true" mode="SingleSelectLeft" growingScrollToLoad="true">


				<columns>
					<Column>
						<Text text="Ticket ID" />
					</Column>
					<Column>
						<Text text="Reporter Name" />
					</Column>
					<Column>
						<Text text="Issue" />
					</Column>
					<Column>
						<Text text="Machine ID" />
					</Column>
					<Column>
						<Text text="Priority" />
					</Column>
					<Column>
						<Text text="Reported On" />
					</Column>
					<Column>
						<Text text="Expected Completion Time" />
					</Column>
					<Column>
						<Text text="Status" />
					</Column>
					<Column>
						<Text text="Assigned To" />
					</Column>
					<Column>
						<Text text="Assigned By" />
					</Column>
					<Column>
						<Text text="Technician Note" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{Id}" />
							<Text text="{PersonName}" />
							<Text text="{Issue}" />
							<Text text="{MachineId}" />
							<Text text="{Priority}" />
							<Text text="{ReportedOn}" />
							<Text text="{ExpctedCompltDt}" />
							<Text text="{Status}" />
							<Text text="{AssignedTo}" />
							<Text text="{AssignedBy}" />
							<Text text="{TechnicianNote}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			<Button text="Read" type="Accept" press="onReadTicketTech" id="idReadTicket" />
			<Button text="Update" type="Accept" press="onUpdateTicketTech"
				id="idUpdateTicketTech" />
			<l:Grid defaultSpan="L12 M12 S12" width="auto" id="gridIdTicketTechRead">
				<l:content>

					<f:SimpleForm id="ReadDetailsForm" minWidth="1024"
						maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
						title="Service Ticket Details" labelSpanL="3" labelSpanM="3"
						emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" class="editableForm">
						<f:content>
							<Label text="Ticket ID" />
							<Input value="{Id}" id="ticketId" type="Number" maxLength="5" />
							<Label text="Reporter Name" />
							<Input value="{PersonName}" id="personNameId" maxLength="40" />
							<Label text="Issue" />
							<Input value="{Issue}" id="issueId" />
							<Label text="Machine ID" />
							<Input value="{MachineId}" id="machineId" maxLength="3" />
							<Label text="Priority" />
							<Input value="{Priority}" id="priorityId" maxLength="1" />
							<Label text="Reported On" />
							<Input value="{ReportedOn}" id="reportedOnId" maxLength="20" />
							<Label text="Expected Completion Time" />
							<Input value="{ExpctedCompltDt}" id="expctedCompltDtId"
								maxLength="20" />
							<Label text="Status" />
							<Input value="{Status}" id="statusId" maxLength="1" />
							<Label text="Assigned To" />
							<Input value="{AssignedTo}" id="assignedToId" maxLength="12" />
							<Label text="Assigned By" />
							<Input value="{AssignedBy}" id="assignedById" maxLength="12" />
							<Label text="Technician Note" />
							<Input value="{TechnicianNote}" id="technicianNoteId" />
							<Button text="Close" type="Accept" press="onCloseTechnicianRead"
								id="closeBtnTechRead" />
						</f:content>
					</f:SimpleForm>
				</l:content>
			</l:Grid>

			<l:Grid defaultSpan="L12 M12 S12" width="auto"
				id="gridIdTicketTechUpdate">
				<l:content>

					<f:SimpleForm id="UpdateDetailsForm" minWidth="1024"
						maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
						title="Update Service Ticket" labelSpanL="3" labelSpanM="3"
						emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" class="editableForm">
						<f:content>
							<Label text="Ticket ID" />
							<Input value="{Id}" id="ticketUpdateId" type="Number"
								maxLength="5" />
							<Label text="Reporter Name" />
							<Input value="{PersonName}" id="personNameUpdateId"
								maxLength="40" />
							<Label text="Issue" />
							<Input value="{Issue}" id="issueUpdateId" />
							<Label text="Machine ID" />
							<Input value="{MachineId}" id="machineUpdateId" maxLength="3" />
							<Label text="Priority" />
							<Select id="priorityUpdateId" selectedKey="{Priority}">
								<items>
									<core:Item text="0" key="0" />
									<core:Item text="1" key="1" />
									<core:Item text="2" key="2" />
								</items>
							</Select>

							<Label text="Reported On" />
							<Input value="{ReportedOn}" id="reportedOnUpdateId"
								maxLength="20" />
							<Label text="Expected Completion Time" />
							<Input value="{ExpctedCompltDt}" id="expctedCompltDtUpdateId"
								maxLength="20" placeholder="DD/MM/YYYY" />
							<Label text="Status" />
							<Select id="statusUpdateId" selectedKey="{Status}">
								<items>
									<core:Item text="0" key="0" />
									<core:Item text="1" key="1" />
									<core:Item text="2" key="2" />
									<core:Item text="3" key="3" />
								</items>
							</Select>

							<Label text="Assigned To" />
							<Input value="{AssignedTo}" id="assignedToUpdateId"
								maxLength="12" />
							<Label text="Assigned By" />
							<Input value="{AssignedBy}" id="assignedByUpdateId"
								maxLength="12" />
							<Label text="Technician Note" />
							<Input value="{TechnicianNote}" id="technicianNoteUpdateId" />
							<Button text="Save" type="Accept" press="onSaveTechnicianUpdate"
								id="saveBtnTechUpdate" />
							<Button text="Close" type="Accept" press="onCloseTechnicianUpdate"
								id="closeBtnTechUpdate" />
						</f:content>
					</f:SimpleForm>
				</l:content>
			</l:Grid>
		</content>
	</Page>
</core:View>

				
					
			
				
		
			
	